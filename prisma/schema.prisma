generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  TURISTA
  ADMIN
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String?
  googleID String?  @unique
  role     UserRole @default(TURISTA)
}

model Place {
  id        String    @id @default(uuid())
  name      String
  type      placeType
  phone     String
  latitude  Float
  longitude Float
  images    Json[]
  created_at DateTime @default(now())
}

enum placeType {
  RESTAURANTE
  BAR
  HOTEL
}
